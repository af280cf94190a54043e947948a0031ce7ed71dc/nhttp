{
  "compilerOptions": {
    "outDir": "./npm/dist/types",
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "WebWorker"
    ]
  },
  "include": [
    "./npm/src/**/*.ts",
    "./npm/node/**/*.ts",
    "./npm/lib/**/*.ts"
  ]
}
