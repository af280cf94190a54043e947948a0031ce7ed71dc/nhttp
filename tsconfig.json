{
  "compilerOptions": {
    "outDir": "./npm/types",
    "declaration": true,
    "skipLibCheck": true,
    "module": "ES2020",
    "emitDeclarationOnly": true,
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "WebWorker"
    ]
  },
  "include": [
    "./npm/src/**/*.ts",
    "./npm/node/**/*.ts",
    "./npm/lib/**/*.ts"
  ]
}
